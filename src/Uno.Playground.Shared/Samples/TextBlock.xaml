			<TextBlock Text="Simple"
					   Style="{StaticResource SampleSectionTextBlockStyle}" />
			<TextBlock Text="Text" />

			<TextBlock Text="Foreground"
					   Style="{StaticResource SampleSectionTextBlockStyle}" />
			<StackPanel>
				<TextBlock Text="Red"
						   Foreground="Red" />
				<TextBlock Text="Green"
						   Foreground="Green" />
				<TextBlock Text="Blue"
						   Foreground="Blue" />
			</StackPanel>

			<TextBlock Text="FontStyle"
					   Style="{StaticResource SampleSectionTextBlockStyle}" />
			<StackPanel>
				<TextBlock Text="Normal"
						   FontStyle="Normal" />
				<TextBlock Text="Italic"
						   FontStyle="Italic" />
			</StackPanel>

			<TextBlock Text="FontWeight"
					   Style="{StaticResource SampleSectionTextBlockStyle}" />
			<StackPanel>
				<TextBlock Text="Light"
						   FontWeight="Light" />
				<TextBlock Text="Normal"
						   FontWeight="Normal" />
				<TextBlock Text="SemiBold"
						   FontWeight="SemiBold" />
				<TextBlock Text="Bold"
						   FontWeight="Bold" />
				<TextBlock Text="ExtraBold"
						   FontWeight="ExtraBold" />
			</StackPanel>

			<TextBlock Text="FontFamily"
					   Style="{StaticResource SampleSectionTextBlockStyle}" />
			<StackPanel>
				<TextBlock Text="Normal" />
				<TextBlock Text="Serif"
						   win:FontFamily="Cambria"
						   ios:FontFamily="Courier New"
						   android:FontFamily="serif" />
				<TextBlock Text="Monospace"
						   win:FontFamily="Consolas"
						   ios:FontFamily="Courier"
						   android:FontFamily="monospace" />
			</StackPanel>

			<TextBlock Text="FontSize"
					   Style="{StaticResource SampleSectionTextBlockStyle}" />
			<StackPanel>
				<TextBlock Text="10"
						   FontSize="10" />
				<TextBlock Text="20"
						   FontSize="20" />
				<TextBlock Text="40"
						   Margin="0,-8,0,0"
						   FontSize="40" />
			</StackPanel>

