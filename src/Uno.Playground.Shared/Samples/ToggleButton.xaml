<UserControl x:Class="Uno.UI.Demo.Samples.ToggleButton"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:local="using:Uno.UI.Demo.Samples"
			 xmlns:xamarin="http://uno.ui/xamarin"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 mc:Ignorable="xamarin">

	<ScrollViewer>
		<StackPanel Style="{StaticResource SamplePanelStyle}">

			<TextBlock Style="{StaticResource SampleSectionTextBlockStyle}"
					   Text="Normal" />
			
			<ToggleButton Content="ToggleButton" />

			<TextBlock Style="{StaticResource SampleSectionTextBlockStyle}"
					   Text="Checked" />
			
			<ToggleButton Content="ToggleButton"
						  IsChecked="True" />

			<TextBlock Style="{StaticResource SampleSectionTextBlockStyle}"
					   Text="Disabled" />

			<ToggleButton Content="ToggleButton"
						  IsEnabled="False" />
		</StackPanel>
	</ScrollViewer>
</UserControl>
