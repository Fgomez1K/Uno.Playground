<Page x:Class="Uno.UI.Demo.SamplePage"
	  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	  xmlns:local="using:Uno.UI.Demo"
	  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	  xmlns:ios="http://uno.ui/ios"
	  xmlns:toolkit="using:Uno.UI.Toolkit"
	  mc:Ignorable="d ios">

	<Grid Background="{StaticResource Color01Brush}"		  
		  toolkit:VisibleBoundsPadding.PaddingMask="Bottom">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>

		<CommandBar x:Name="SampleTitle" />

		<ContentControl Grid.Row="1"
						x:Name="SampleContent"
						VerticalContentAlignment="Stretch"
						HorizontalContentAlignment="Stretch" />
	</Grid>
</Page>
